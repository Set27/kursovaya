<div class="row">
  <div class="col">
    <div class="row">
      <div class="col">
        <h1> Пользователи </h1>
      </div>
    </div>

    <table class="table table-border">
      <tr class = "table-primary">
          <th>Email</th>
          <th>Роль</th>
          <th></th>
      </tr>
      <% @users.each do |user| %>
        <tr class="table-light">
          <td><%= user.email %></td>
          <td><%= user.role_text %></td>
          <td>
            <% if allowed_to?(:edit?, user) %>
              <%= link_to "Поменять роль", edit_user_path(user), class: "btn btn-sm btn-primary" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
